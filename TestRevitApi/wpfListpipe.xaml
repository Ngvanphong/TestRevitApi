<Window x:Class="TestRevitApi.wpfListpipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestRevitApi"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView Name="lblistsystempipe">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Diameter" Width="100" DisplayMemberBinding="{Binding Diameter}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="OK" Grid.Column="1" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Click="btnOK"></Button>
    </Grid>
</Window>
